OIL_VERSION = "2.5";

IMPLEMENTATION trampoline {
    /* This fix the default STACKSIZE of tasks */
    TASK {
        UINT32 STACKSIZE = 300 ;
    } ;

    /* This fix the default STACKSIZE of ISRs */
    ISR {
        UINT32 STACKSIZE = 200 ;
    } ;
};

CPU serial {
  OS config {
    STATUS = EXTENDED;
    PAINT_STACK = TRUE;
    PAINT_REGISTERS = TRUE;
    
    BUILD = TRUE {
      TRAMPOLINE_BASE_PATH = "../../../../../..";
      APP_SRC = "FPU_test.c";
      APP_SRC = "clock.c";
      APP_NAME = "FPU_test";
      LIBRARY = serial {
        TXBUFFER = 64;
      };
      CFLAGS  = "-O3";
      CFLAGS  = "-finline-functions";
      // CFLAGS  = "-fomit-frame-pointer -fno-common";
      CFLAGS  = "-ffast-math -funroll-loops";

      LDFLAGS = "-Map=serial.map";
      COMPILER = "arm-none-eabi-gcc";
      ASSEMBLER = "arm-none-eabi-as";
      LINKER = "arm-none-eabi-ld";
      COPIER = "arm-none-eabi-objcopy";
      SYSTEM = CMAKE {VSCODE=TRUE;};
    };
    SYSTEM_CALL = TRUE;
    MEMMAP = TRUE {
      COMPILER = gcc;
      LINKER = gnu_ld { SCRIPT = "script.ld"; };
      ASSEMBLER = gnu_as;
      MEMORY_PROTECTION = FALSE;
    };
  };
  
  APPMODE appStd {};
  
  TASK highPrioTask {
    PRIORITY = 20;
    AUTOSTART = FALSE;
    USEFLOAT= TRUE;
    ACTIVATION = 1;
    SCHEDULE = FULL;
  };

  TASK backgroundTask {
    PRIORITY = 2;
    AUTOSTART = TRUE {APPMODE = appStd;};
    USEFLOAT= TRUE;
    ACTIVATION = 1;
    SCHEDULE = FULL;
  };

  ALARM periodicAl {
    COUNTER = SystemCounter;
    ACTION = ACTIVATETASK {
      TASK = highPrioTask;
    };
    AUTOSTART = TRUE {
      APPMODE = appStd;
      ALARMTIME = 2;
      CYCLETIME = 1;
    };
  };
  //ISR required by the serial TX
  ISR usart {
    CATEGORY = 1;
    PRIORITY = 10;
    SOURCE = USART2_IRQ; //TX on PA2/A7
  };
};

