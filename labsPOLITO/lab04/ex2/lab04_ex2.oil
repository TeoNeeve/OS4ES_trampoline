OIL_VERSION = "2.5";

CPU three_tasks {
	OS config {
		STATUS = STANDARD;
		BUILD = TRUE {
    		TRAMPOLINE_BASE_PATH = "../../..";
			APP_NAME = "ex2_arduino";
			APP_SRC = "ex2.cpp";
			CPPCOMPILER = "avr-g++";
    		COMPILER = "avr-gcc";
    		LINKER = "avr-gcc";
    		ASSEMBLER = "avr-gcc";
    		COPIER = "avr-objcopy";
    		SYSTEM = PYTHON;
			LIBRARY = serial;
    	};
    SYSTEM_CALL = TRUE;
	};

	APPMODE stdAppmode {};

	RESOURCE SensorRes {
		RESOURCEPROPERTY = STANDARD;
	};

	ALARM AlarmBlink {
		COUNTER = SystemCounter;
		ACTION = ACTIVATETASK { TASK = Blink; };
		AUTOSTART = FALSE;
	};

	ALARM a100msec {
		COUNTER = SystemCounter;
		ACTION = ACTIVATETASK { TASK = TaskW; };
		AUTOSTART = TRUE { APPMODE = stdAppmode; ALARMTIME = 100; CYCLETIME = 100; };
	};

	ALARM a125msecV {
		COUNTER = SystemCounter;
		ACTION = ACTIVATETASK { TASK = TaskV; };
		AUTOSTART = TRUE { APPMODE = stdAppmode; ALARMTIME = 125; CYCLETIME = 125; };
	};

	TASK Blink {
		PRIORITY = 1;
		AUTOSTART = FALSE;
		ACTIVATION = 1;
		SCHEDULE = FULL;
	};

	TASK TaskW {
		PRIORITY = 4;
		AUTOSTART = TRUE { APPMODE = stdAppmode; };
		ACTIVATION = 1;
		SCHEDULE = FULL;
		RESOURCE = SensorRes;
	};

	TASK TaskV {
		PRIORITY = 2;
		AUTOSTART = TRUE { APPMODE = stdAppmode; };
		ACTIVATION = 1;
		SCHEDULE = FULL;
		RESOURCE = SensorRes;
	};

};